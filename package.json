{
  "name": "gdpm",
  "version": "0.0.1",
  "description": "A Godot Package Manager.",
  "type": "module",
  "engines": {
    "node": ">=24.5.0"
  },
  "bin": {
    "gdpm": "dist/index.js"
  },
  "files": [
    "dist/index.js"
  ],
  "scripts": {
    "dev": "npm run build -- --watch",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "build": "esbuild src/index.ts --bundle --minify --format=esm --platform=node --target=node18 --outdir=dist --packages=external",
    "release": "npm run build && np",
    "prepare": "husky",
    "typecheck": "tsc -p tsconfig.json --skipLibCheck --noEmit",
    "link": "npm run build && npm link",
    "unlink": "npm unlink -g gdpm"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "simple-git": "^3.26.0",
    "yoctocolors": "^2.1.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "esbuild": "^0.23.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "globals": "^16.3.0",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.10",
    "np": "^10.0.7",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.4.0",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.0.5"
  },
  "keywords": [
    "godot",
    "cli",
    "package manager",
    "git"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jv-vogler/gdpm.git"
  },
  "author": "Jo√£o Vogler",
  "license": "MIT"
}
